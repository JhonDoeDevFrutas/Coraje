<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="standardsoft.com.coraje">

    <!-- Red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permisos Escritura Lectura -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.view.planningModule.view.PlanningActivity"
            android:label="@string/title_activity_planning"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.view.detailSubPlanningModule.view.SubPlanningActivity"
            android:label="@string/title_activity_sub_planning"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.view.taskModule.view.TaskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.view.detailTaskModule.view.DetailTaskActivity"
            android:label="@string/title_activity_detail_task"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.view.SignInModule.view.SignInActivity" />
        <activity android:name=".ui.view.SignUp.view.SignUpActivity"></activity>
    </application>

</manifest>