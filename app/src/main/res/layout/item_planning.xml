<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/image_task"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cerclered"
            android:src="@drawable/ic_bug_white"
            android:layout_centerVertical="true"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/text_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/image_task"
            android:textStyle="bold"
            android:text="Reunion con equipo de trabajo" />

        <TextView
            android:id="@+id/text_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_task"
            android:layout_alignStart="@id/text_task"
            android:layout_below="@id/text_task"
            android:text="Modulo: ADMISION Estado: ESPERANDO" />

        <TextView
            android:id="@+id/text_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_task"
            android:layout_alignStart="@id/text_task"
            android:layout_below="@id/text_module"
            android:text="100% Prioridad:BAJA " />


    </RelativeLayout>

</android.support.v7.widget.CardView>